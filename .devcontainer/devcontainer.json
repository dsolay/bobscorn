{
  "name": "app",
  "build": {
    "context": ".",
    "dockerfile": "Dockerfile"
  },
  "runArgs": [
    "--name=app"
  ],
  "forwardPorts": [
    3000,
    5173
  ],
  "remoteUser": "app",
  "workspaceMount": "source=${localWorkspaceFolder},target=/home/app/workspace/app/,type=bind,consistency=cached",
  "workspaceFolder": "/home/app/workspace/app",
  "mounts": [
    "source=node_modules,target=${containerWorkspaceFolder}/node_modules,type=volume",
    "source=extensions,target=/home/app/.vscode-server/extensions,type=volume"
  ],
  "postCreateCommand": "./.devcontainer/postCreateCommand.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        "redhat.vscode-yaml",
        "mikestead.dotenv",
        "dbaeumer.vscode-eslint",
        "stoplight.spectral",
        "ms-azuretools.vscode-docker",
        "Prisma.prisma",
        "SonarSource.sonarlint-vscode",
        "antfu.unocss",
        "Nuxtr.nuxt-vscode-extentions",
        "Vue.volar",
        "alimozdemir.vscode-nuxt-dx-tools",
        "hverlin.mise-vscode",
        "tamasfe.even-better-toml"
      ]
    }
  }
}
